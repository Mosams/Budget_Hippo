<%= form_with url: category_items_path, method: :get  do |f| %>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3">
      <%= f.select :category_id, @categories.collect { |category| [category.name, category.id] }, :prompt => 'Select a category',
      class:"w-full bg-gray-200 text-black border border-gray-200 rounded py-3 px-4 mb-3", required: true %>
      </div>
    </div>
    <div class="-mx-3 md:flex mt-2">
    <div class="md:w-full px-3">
      <%= f.submit "Add Category", 
      class:"md:w-full bg-gray-900 cursor-pointer text-white font-bold py-2 px-4 border-b-4 hover:border-b-2 border-gray-500 hover:border-gray-100 rounded-full" %>
    </div>
  </div>
<% end %>
